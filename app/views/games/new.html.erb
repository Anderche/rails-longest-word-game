<h1>New Game</h1>

<!-- array -->
<%= @letters %>
<!-- string -->
<% let = @letters.join %>
<!-- ADD FORM -->

<!-- a form for the user to type a word. A button to submit this form.
 -->

<h2>Type a Word</h2>


<form action="/score" method="post">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <input type="text" name="typed_word" placeholder="place your word here">
  <input type="hidden" name="grid" value="<%= let %>">
  <input type="hidden" name="start_time" value="<%= Time.now %>">
  <input type="submit">
</form>
